---
import { Shield, Cookie, Settings, Rocket } from 'lucide-react';

const today = new Date();
const companyInfo = {
  name: import.meta.env.COMPANY_NAME || 'Of Tomorrow, Inc.',
};
---

<footer class="bg-text-primary text-white py-12">
  <div class="container mx-auto px-4">
    <div class="max-w-6xl mx-auto">
      <!-- Main Footer Content -->
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-8">
        
        <!-- Company Info -->
        <div class="md:col-span-2">
          <div class="flex items-center space-x-2 mb-4">
            <div class="flex items-center justify-center w-8 h-8 rounded-full bg-white/10">
              <Rocket className="h-5 w-5 text-white" />
            </div>
            <span class="font-brand font-semibold text-lg">OF TOMORROW, INC.</span>
          </div>
          <p class="text-white/70 text-sm mb-4 max-w-md">
            Engineering tomorrow's possibilities into today's reality. Technology that serves all people, everywhere.
          </p>
        </div>

        <!-- Quick Links -->
        <div>
          <h3 class="font-brand font-semibold text-white mb-4">Quick Links</h3>
          <ul class="space-y-2">
            <li>
              <a href="/#services" class="text-white/70 hover:text-white transition-colors text-sm">
                Services
              </a>
            </li>
            <li>
              <a href="/#about" class="text-white/70 hover:text-white transition-colors text-sm">
                About
              </a>
            </li>
            <li>
              <a href="/#products" class="text-white/70 hover:text-white transition-colors text-sm">
                Products
              </a>
            </li>
            <li>
              <a href="/#contact" class="text-white/70 hover:text-white transition-colors text-sm">
                Contact
              </a>
            </li>
          </ul>
        </div>

        <!-- Privacy & Legal -->
        <div>
          <h3 class="font-brand font-semibold text-white mb-4">Privacy & Legal</h3>
          <ul class="space-y-2">
            <li>
              <a 
                href="/privacy-policy" 
                target="_blank"
                class="inline-flex items-center gap-2 text-white/70 hover:text-white transition-colors text-sm"
              >
                <Shield className="h-3 w-3" />
                Privacy Policy
              </a>
            </li>
            <li>
              <a 
                href="/cookie-policy" 
                target="_blank"
                class="inline-flex items-center gap-2 text-white/70 hover:text-white transition-colors text-sm"
              >
                <Cookie className="h-3 w-3" />
                Cookie Policy
              </a>
            </li>
            <li>
              <button 
                onclick="window.dispatchEvent(new CustomEvent('openCookieSettings'))"
                class="inline-flex items-center gap-2 text-white/70 hover:text-white transition-colors text-sm bg-transparent border-0 p-0 cursor-pointer"
              >
                <Settings className="h-3 w-3" />
                Cookie Settings
              </button>
            </li>
          </ul>
        </div>
      </div>

      <!-- Bottom Section -->
      <div class="border-t border-white/20 pt-8">
        <div class="flex flex-col md:flex-row justify-between items-center gap-4">
          <p class="text-white/60 text-sm">
            Â© {today.getFullYear()} {companyInfo.name}. Engineering tomorrow's possibilities, one innovation at a time.
          </p>
          
          <!-- Cookie Consent Status Indicator -->
          <div class="flex items-center gap-2 text-xs">
            <div id="cookie-consent-indicator" class="flex items-center gap-2">
              <div class="w-2 h-2 bg-white/40 rounded-full" id="consent-dot"></div>
              <span class="text-white/60" id="consent-text">Cookie preferences not set</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>

<script>
  // Update consent indicator based on current consent status
  function updateConsentIndicator() {
    if (typeof window === 'undefined') return;
    
    const dot = document.getElementById('consent-dot');
    const text = document.getElementById('consent-text');
    
    if (!dot || !text) return;
    
    try {
      const stored = localStorage.getItem('of-tomorrow-cookie-consent');
      
      if (!stored) {
        dot.className = 'w-2 h-2 bg-white/40 rounded-full';
        text.textContent = 'Cookie preferences not set';
        return;
      }
      
      const consent = JSON.parse(stored);
      const hasAnalytics = consent.analytics;
      const hasMarketing = consent.marketing;
      
      if (hasAnalytics && hasMarketing) {
        dot.className = 'w-2 h-2 bg-green-400 rounded-full';
        text.textContent = 'All cookies accepted';
      } else if (hasAnalytics || hasMarketing) {
        dot.className = 'w-2 h-2 bg-yellow-400 rounded-full';
        text.textContent = 'Some cookies accepted';
      } else {
        dot.className = 'w-2 h-2 bg-red-400 rounded-full';
        text.textContent = 'Only necessary cookies';
      }
    } catch {
      dot.className = 'w-2 h-2 bg-white/40 rounded-full';
      text.textContent = 'Cookie preferences not set';
    }
  }
  
  // Update indicator on page load
  document.addEventListener('DOMContentLoaded', updateConsentIndicator);
  
  // Update indicator when consent changes
  window.addEventListener('consentUpdate', updateConsentIndicator);
  
  // Update indicator on storage changes (from other tabs)
  window.addEventListener('storage', function(e) {
    if (e.key === 'of-tomorrow-cookie-consent') {
      updateConsentIndicator();
    }
  });
</script>