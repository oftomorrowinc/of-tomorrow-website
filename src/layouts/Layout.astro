---
import TrackingScripts from '../components/TrackingScripts.astro';
import { ConsentManager } from '../components/ConsentManager';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Of Tomorrow, Inc. - Engineering tomorrow's possibilities for everyone, everywhere" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;700&family=Inter:wght@400;500;600&family=JetBrains+Mono:wght@400;700&display=swap" rel="stylesheet">
    <title>{title}</title>
    
    <!-- GDPR-Compliant Tracking Scripts -->
    <TrackingScripts />
  </head>
  <body class="bg-bg-primary text-text-primary min-h-screen font-body">
    <slot />
    
    <!-- GDPR Consent Management -->
    <ConsentManager client:load />
    
    <!-- TawkTo Chat Widget -->
    <script type="text/javascript">
    var Tawk_API=Tawk_API||{}, Tawk_LoadStart=new Date();
    (function(){
    var s1=document.createElement("script"),s0=document.getElementsByTagName("script")[0];
    s1.async=true;
    s1.src='https://embed.tawk.to/68a37d666dc7731924f6f400/1j2va3mc3';
    s1.charset='UTF-8';
    s1.setAttribute('crossorigin','*');
    s0.parentNode.insertBefore(s1,s0);
    })();
    </script>
  </body>
</html>