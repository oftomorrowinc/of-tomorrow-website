---
import Layout from '../layouts/Layout.astro';
import { ArrowLeft, Shield, Eye, Database, Clock, Mail, Scale } from 'lucide-react';

const companyInfo = {
  name: import.meta.env.COMPANY_NAME || 'Of Tomorrow, Inc.',
  address: import.meta.env.COMPANY_ADDRESS || '123 Innovation Boulevard, Future City, FC 12345, United States',
  email: import.meta.env.COMPANY_EMAIL || 'contact@oftomorrow.inc',
  privacyEmail: import.meta.env.PRIVACY_CONTACT_EMAIL || 'privacy@oftomorrow.inc',
  retentionDays: import.meta.env.DATA_RETENTION_DAYS || '365',
};

const lastUpdated = new Date().toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<Layout title="Privacy Policy - Of Tomorrow, Inc.">
  <main class="min-h-screen bg-white">
    <!-- Header -->
    <div class="bg-gradient-to-r from-tomorrow-blue to-tomorrow-blue/90 text-white">
      <div class="container mx-auto px-4 py-12">
        <div class="flex items-center gap-4 mb-6">
          <a 
            href="/" 
            class="inline-flex items-center gap-2 text-white/80 hover:text-white transition-colors text-sm"
          >
            <ArrowLeft className="h-4 w-4" />
            Back to Home
          </a>
        </div>
        
        <div class="flex items-start gap-4">
          <div class="flex-shrink-0 bg-white/10 rounded-lg p-3">
            <Shield className="h-8 w-8 text-white" />
          </div>
          <div>
            <h1 class="font-brand text-3xl sm:text-4xl font-bold mb-2">
              Privacy Policy
            </h1>
            <p class="text-white/90 text-lg">
              How we collect, use, and protect your personal information
            </p>
            <p class="text-white/70 text-sm mt-2">
              Last updated: {lastUpdated}
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Content -->
    <div class="container mx-auto px-4 py-12">
      <div class="max-w-4xl mx-auto">
        <div class="prose prose-lg max-w-none">
          
          <!-- Introduction -->
          <section class="mb-12">
            <div class="bg-bg-secondary rounded-lg p-6 mb-8">
              <p class="text-text-primary font-medium mb-2">
                Your privacy is important to us. This Privacy Policy explains how {companyInfo.name} 
                collects, uses, and protects your information when you visit our website.
              </p>
              <p class="text-text-secondary text-sm">
                By using our website, you agree to the collection and use of information in accordance with this policy.
              </p>
            </div>
          </section>

          <!-- Information We Collect -->
          <section class="mb-12">
            <div class="flex items-center gap-3 mb-6">
              <Eye className="h-6 w-6 text-tomorrow-blue" />
              <h2 class="font-brand text-2xl font-semibold text-text-primary">
                Information We Collect
              </h2>
            </div>
            
            <div class="space-y-6">
              <div class="border border-border-gray rounded-lg p-6">
                <h3 class="font-brand text-lg font-medium text-text-primary mb-3">
                  Personal Information
                </h3>
                <p class="text-text-secondary mb-3">
                  We may collect personal information that you voluntarily provide to us, including:
                </p>
                <ul class="list-disc list-inside text-text-secondary space-y-1 ml-4">
                  <li>Name and contact information when you contact us</li>
                  <li>Email address for newsletter subscriptions</li>
                  <li>Information you provide in forms or communications</li>
                  <li>Professional information if you apply for positions</li>
                </ul>
              </div>

              <div class="border border-border-gray rounded-lg p-6">
                <h3 class="font-brand text-lg font-medium text-text-primary mb-3">
                  Automatically Collected Information
                </h3>
                <p class="text-text-secondary mb-3">
                  When you visit our website, we may automatically collect:
                </p>
                <ul class="list-disc list-inside text-text-secondary space-y-1 ml-4">
                  <li>IP address and device information</li>
                  <li>Browser type and version</li>
                  <li>Pages visited and time spent on our site</li>
                  <li>Referring website information</li>
                  <li>General location information (country/region)</li>
                </ul>
              </div>

              <div class="border border-border-gray rounded-lg p-6">
                <h3 class="font-brand text-lg font-medium text-text-primary mb-3">
                  Cookies and Tracking Technologies
                </h3>
                <p class="text-text-secondary mb-3">
                  We use cookies and similar technologies to enhance your experience. 
                  See our <a href="/cookie-policy" target="_blank" class="text-tomorrow-blue hover:underline">Cookie Policy</a> 
                  for detailed information about our use of cookies.
                </p>
              </div>
            </div>
          </section>

          <!-- How We Use Information -->
          <section class="mb-12">
            <div class="flex items-center gap-3 mb-6">
              <Database className="h-6 w-6 text-progress-orange" />
              <h2 class="font-brand text-2xl font-semibold text-text-primary">
                How We Use Your Information
              </h2>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div class="border border-border-gray rounded-lg p-6">
                <h3 class="font-brand text-lg font-medium text-text-primary mb-3">
                  Service Provision
                </h3>
                <ul class="list-disc list-inside text-text-secondary space-y-1">
                  <li>Provide and maintain our website</li>
                  <li>Respond to your inquiries and requests</li>
                  <li>Process applications and communications</li>
                  <li>Deliver requested content and services</li>
                </ul>
              </div>

              <div class="border border-border-gray rounded-lg p-6">
                <h3 class="font-brand text-lg font-medium text-text-primary mb-3">
                  Improvement & Analytics
                </h3>
                <ul class="list-disc list-inside text-text-secondary space-y-1">
                  <li>Analyze website usage and performance</li>
                  <li>Improve our services and user experience</li>
                  <li>Understand user preferences and behavior</li>
                  <li>Develop new features and content</li>
                </ul>
              </div>

              <div class="border border-border-gray rounded-lg p-6">
                <h3 class="font-brand text-lg font-medium text-text-primary mb-3">
                  Communication
                </h3>
                <ul class="list-disc list-inside text-text-secondary space-y-1">
                  <li>Send important updates and notifications</li>
                  <li>Provide customer support</li>
                  <li>Share relevant news and content (with consent)</li>
                  <li>Respond to legal requests when required</li>
                </ul>
              </div>

              <div class="border border-border-gray rounded-lg p-6">
                <h3 class="font-brand text-lg font-medium text-text-primary mb-3">
                  Legal Compliance
                </h3>
                <ul class="list-disc list-inside text-text-secondary space-y-1">
                  <li>Comply with applicable laws and regulations</li>
                  <li>Protect our rights and interests</li>
                  <li>Prevent fraud and security threats</li>
                  <li>Enforce our terms and policies</li>
                </ul>
              </div>
            </div>
          </section>

          <!-- Data Sharing -->
          <section class="mb-12">
            <div class="flex items-center gap-3 mb-6">
              <Scale className="h-6 w-6 text-innovation-purple" />
              <h2 class="font-brand text-2xl font-semibold text-text-primary">
                Information Sharing and Disclosure
              </h2>
            </div>
            
            <div class="bg-bg-secondary rounded-lg p-6 mb-6">
              <p class="text-text-primary font-medium mb-2">
                We do not sell, trade, or rent your personal information to third parties.
              </p>
              <p class="text-text-secondary">
                We may share your information only in the following limited circumstances:
              </p>
            </div>

            <div class="space-y-4">
              <div class="border-l-4 border-tomorrow-blue pl-4">
                <h3 class="font-medium text-text-primary mb-1">Service Providers</h3>
                <p class="text-text-secondary text-sm">
                  We may share information with trusted third-party service providers who help us operate 
                  our website and business, such as hosting providers, analytics services, and email services.
                </p>
              </div>
              
              <div class="border-l-4 border-progress-orange pl-4">
                <h3 class="font-medium text-text-primary mb-1">Legal Requirements</h3>
                <p class="text-text-secondary text-sm">
                  We may disclose information when required by law, court order, or legal process, 
                  or to protect our rights, property, or safety.
                </p>
              </div>
              
              <div class="border-l-4 border-innovation-purple pl-4">
                <h3 class="font-medium text-text-primary mb-1">Business Transfers</h3>
                <p class="text-text-secondary text-sm">
                  In the event of a merger, acquisition, or sale of assets, your information may be 
                  transferred as part of the business transaction.
                </p>
              </div>
            </div>
          </section>

          <!-- Data Retention -->
          <section class="mb-12">
            <div class="flex items-center gap-3 mb-6">
              <Clock className="h-6 w-6 text-growth-teal" />
              <h2 class="font-brand text-2xl font-semibold text-text-primary">
                Data Retention
              </h2>
            </div>
            
            <div class="border border-border-gray rounded-lg p-6">
              <p class="text-text-secondary mb-4">
                We retain your personal information for as long as necessary to fulfill the purposes 
                outlined in this Privacy Policy, unless a longer retention period is required or 
                permitted by law.
              </p>
              
              <div class="bg-bg-secondary rounded-lg p-4">
                <h3 class="font-brand text-lg font-medium text-text-primary mb-2">
                  Standard Retention Period
                </h3>
                <p class="text-text-secondary">
                  We typically retain personal data for <strong>{companyInfo.retentionDays} days</strong> 
                  after your last interaction with our services, unless you request earlier deletion 
                  or we have a legal obligation to retain it longer.
                </p>
              </div>
            </div>
          </section>

          <!-- Your Rights -->
          <section class="mb-12">
            <div class="flex items-center gap-3 mb-6">
              <Shield className="h-6 w-6 text-tomorrow-blue" />
              <h2 class="font-brand text-2xl font-semibold text-text-primary">
                Your Privacy Rights
              </h2>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div class="space-y-4">
                <div class="border border-border-gray rounded-lg p-4">
                  <h3 class="font-medium text-text-primary mb-2">Access</h3>
                  <p class="text-text-secondary text-sm">
                    Request access to your personal information we hold.
                  </p>
                </div>
                
                <div class="border border-border-gray rounded-lg p-4">
                  <h3 class="font-medium text-text-primary mb-2">Rectification</h3>
                  <p class="text-text-secondary text-sm">
                    Request correction of inaccurate or incomplete information.
                  </p>
                </div>
                
                <div class="border border-border-gray rounded-lg p-4">
                  <h3 class="font-medium text-text-primary mb-2">Erasure</h3>
                  <p class="text-text-secondary text-sm">
                    Request deletion of your personal information (right to be forgotten).
                  </p>
                </div>
              </div>
              
              <div class="space-y-4">
                <div class="border border-border-gray rounded-lg p-4">
                  <h3 class="font-medium text-text-primary mb-2">Portability</h3>
                  <p class="text-text-secondary text-sm">
                    Request a copy of your data in a structured, machine-readable format.
                  </p>
                </div>
                
                <div class="border border-border-gray rounded-lg p-4">
                  <h3 class="font-medium text-text-primary mb-2">Objection</h3>
                  <p class="text-text-secondary text-sm">
                    Object to certain processing of your personal information.
                  </p>
                </div>
                
                <div class="border border-border-gray rounded-lg p-4">
                  <h3 class="font-medium text-text-primary mb-2">Restriction</h3>
                  <p class="text-text-secondary text-sm">
                    Request restriction of processing in certain circumstances.
                  </p>
                </div>
              </div>
            </div>
          </section>

          <!-- Security -->
          <section class="mb-12">
            <h2 class="font-brand text-2xl font-semibold text-text-primary mb-6">
              Data Security
            </h2>
            
            <div class="border border-border-gray rounded-lg p-6">
              <p class="text-text-secondary mb-4">
                We implement appropriate technical and organizational security measures to protect 
                your personal information against unauthorized access, alteration, disclosure, or destruction.
              </p>
              
              <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div class="bg-bg-secondary rounded-lg p-4 text-center">
                  <h3 class="font-medium text-text-primary mb-1">Encryption</h3>
                  <p class="text-text-secondary text-sm">Data encrypted in transit and at rest</p>
                </div>
                
                <div class="bg-bg-secondary rounded-lg p-4 text-center">
                  <h3 class="font-medium text-text-primary mb-1">Access Control</h3>
                  <p class="text-text-secondary text-sm">Limited access on need-to-know basis</p>
                </div>
                
                <div class="bg-bg-secondary rounded-lg p-4 text-center">
                  <h3 class="font-medium text-text-primary mb-1">Monitoring</h3>
                  <p class="text-text-secondary text-sm">Continuous security monitoring</p>
                </div>
              </div>
            </div>
          </section>

          <!-- Contact Information -->
          <section class="mb-12">
            <div class="flex items-center gap-3 mb-6">
              <Mail className="h-6 w-6 text-progress-orange" />
              <h2 class="font-brand text-2xl font-semibold text-text-primary">
                Contact Us
              </h2>
            </div>
            
            <div class="border border-border-gray rounded-lg p-6">
              <p class="text-text-secondary mb-4">
                If you have any questions about this Privacy Policy or our privacy practices, 
                please contact us:
              </p>
              
              <div class="space-y-2 text-text-secondary">
                <p><strong>Email:</strong> <a href={`mailto:${companyInfo.privacyEmail}`} class="text-tomorrow-blue hover:underline">{companyInfo.privacyEmail}</a></p>
                <p><strong>General Contact:</strong> <a href={`mailto:${companyInfo.email}`} class="text-tomorrow-blue hover:underline">{companyInfo.email}</a></p>
                <p><strong>Address:</strong> {companyInfo.address}</p>
              </div>
            </div>
          </section>

          <!-- Updates -->
          <section class="mb-12">
            <h2 class="font-brand text-2xl font-semibold text-text-primary mb-6">
              Changes to This Policy
            </h2>
            
            <div class="bg-bg-secondary rounded-lg p-6">
              <p class="text-text-secondary">
                We may update this Privacy Policy from time to time. We will notify you of any 
                changes by posting the new Privacy Policy on this page and updating the "Last updated" 
                date. We encourage you to review this Privacy Policy periodically for any changes.
              </p>
            </div>
          </section>

        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  .prose h2 {
    @apply font-brand;
  }
  
  .prose h3 {
    @apply font-brand;
  }
</style>